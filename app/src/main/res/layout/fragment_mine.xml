<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:scrollbars="none"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0F0F0" >



        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/me_message_head"
            android:id="@+id/as">
            <ImageView
                android:id="@+id/viewPager"
                android:layout_width="fill_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/liner1"
                android:scaleType="fitXY"
                android:src="@drawable/advertise1" />

            <LinearLayout
                android:id="@+id/go_to_memessage"
                android:clickable="true"
                android:layout_width="46dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="40dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/set_me"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:textColor="#fff"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.9dp"
                android:layout_below="@+id/viewPager"
                android:background="#000" />

            <LinearLayout
                android:id="@+id/store_line"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/viewPager"
                android:background="#fff"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="80dp"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/collect_goods"
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:gravity="center|bottom"
                        android:text="魅力"
                        android:textColor="#000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_user_ml"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/collect_goods"
                        android:gravity="center"
                        android:text="--"
                        android:textColor="#000"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/collect_store"
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:gravity="center|bottom"
                        android:text="薯片"
                        android:textColor="#000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_user_chips"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/collect_store"
                        android:gravity="center"
                        android:text="--"
                        android:textColor="#000"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/credits"
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:gravity="center|bottom"
                        android:text="积分"
                        android:textColor="#000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_user_credits"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/credits"
                        android:gravity="center"
                        android:text="--"
                        android:textColor="#000"
                        android:textSize="14sp" />
                </RelativeLayout>



            </LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/civ_user_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="140dp"
                android:src="@drawable/default_user_image"
                app:border_color="#FFFFFF"
                app:border_width="2dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/as"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:orientation="vertical" >



            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="8dp"
                android:background="#f0f0f0" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="#fff" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="昵称"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/me_message_name"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/me_message_head_arrow11"
                    android:gravity="center"
                    android:text="(未登录)"
                    android:textColor="#8000"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/me_message_head_arrow11"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="7.5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/list_icon_normal" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="8dp"
                android:background="#f0f0f0" />



            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="#fff" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="邮箱"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/me_message_email"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/me_message_head_arrow22"
                    android:gravity="center"
                    android:text="(未登录)"
                    android:textColor="#8000"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/me_message_head_arrow22"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="7.5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/list_icon_normal" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="8dp"
                android:background="#f0f0f0" />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="#fff" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="用户组"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/me_message_groupname"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/me_message_head_arrow33"
                    android:gravity="center"
                    android:text="(未登录)"
                    android:textColor="#8000"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/me_message_head_arrow33"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="7.5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/list_icon_normal" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="8dp"
                android:background="#f0f0f0" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="#fff" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="检查更新"
                    android:textColor="#000"
                    android:textSize="15sp" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="8dp"
                android:background="#f0f0f0" />

        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        card_view:cardBackgroundColor="@color/tab_purple"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="3dp">

        <Button
            android:id="@+id/btn_search_course"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:gravity="center"
            android:singleLine="true"
            android:text="快速查课"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        card_view:cardBackgroundColor="@color/tab_purple"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="3dp">

        <Button
            android:id="@+id/btn_login_now"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:gravity="center"
            android:singleLine="true"
            android:text="立即登录"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>